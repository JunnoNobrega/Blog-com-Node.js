<!-- This is frontend for Category admin page -->

<%-include('../../partials/header.ejs')%>
<%-include('../../partials/navbar.ejs')%>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <hr>
            <h1>Categorias</h1>
            <hr>
            <tr>
                <th>ID</th>
                <th>TITULO</th>
                <th>SLUG</th>
                <th>AÇÕES</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        
                        <a href="/admin/categories/edit/ <%= category.id%>" class="btn btn-warning" > Editar</a>
                        
                        <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmarDelete(event,this)" >
                            <input type="hidden" name="id" value=" <%= category.id %>"> 
                            <button class="btn btn-danger"> Excluir</button>
                        </form>
                    </th>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <a class="btn btn-success " href="/admin/categories/new" style="float:right;">Criar nova categoria</a>
    </div>
<%- include('../../partials/footer.ejs')%>

<script>
    function confirmarDelete(event, form){
        event.preventDefault();
       var decision = confirm("Você realmente deseja remover a categoria? ");
       if(decision){
        form.submit();
       }
    }

</script>