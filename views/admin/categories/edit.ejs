<!-- This is frontend for Category edition page -->

<%-include('../../partials/header.ejs')%>
<%-include('../../partials/navbar.ejs')%>
<div class="container" >
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Edição de categoria</h2>
            <h3>Categoria selecionada: <%= category.title %></h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update" style="display: inline;"  onsubmit="confirmEdit(event,this)" >
                <input class="form-control" type="text" name="title" placeholder="Defina o título da categoria" required value="<%= category.title %>">
                <input type="hidden" name="id" value="<%= category.id %>">
                <br>
                <button class="btn btn-success">Atualizar</button>
            </form>
        </div>    
    </div>
        
</div>
<%- include('../../partials/footer.ejs')%>
<script>
        function confirmEdit(event, form){
        event.preventDefault();
       var decision = confirm("Você realmente deseja editar a categoria? ");
       if(decision){
        form.submit();
       }
    }
</script>